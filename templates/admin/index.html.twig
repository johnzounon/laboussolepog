{% extends 'boussole_partials/admin_public_base.html.twig' %}

{% block title %}Tableau de bord | Administration C.S.P La Boussole{% endblock %}

{% block body %}
<section>
    <div class="container-fluid">
        <div class="row">

            {% include 'boussole_partials/admin_left_bar.html.twig' %}

            <div class="col-12 col-lg-6 col-xl-8 offset-lg-3 offset-xl-2 py-7 py-lg-9 px-lg-7">

                <!-- Heading -->
                <div class="d-flex align-items-center">
                    <h1 class="mb-1 me-3">Tableau de bord</h1>
                </div>

                <!-- Text -->
                <p class="font-size-lg text-gray-700">
                Gestion de la comptabilité au C.S.P La Boussole
                </p>

                <!-- Divider -->
                <hr class="border-gray-300 my-6">

                <!-- Heading -->
                <h3 class="fw-bold me-3 text-uppercase" id="colors">1- Scolarité</h3>

                <!-- Text -->
                <p class="text-gray-700 mb-5">
                Carnets de la scolarité primaire et de la scolarité collège
                </p>

                <!-- Card -->
                <div class="row">
                    <div class="col-6">
                        {% for carnet in carnets_scolarite_primaire %}
                        <div class="card bg-primary">
                            <div class="card-body">
                                <h3 class="card-title text-body">N°{{carnet.numero}}</h3>
                                <p class="card-text">
                                    <h2 class="text-body text-uppercase text-light">Scolarité Primaire</h2>
                                    <h2 class="text-body text-uppercase text-light">{{carnet.anneeAcademique.dateDebut}} - {{carnet.anneeAcademique.dateFin}}</h2>
                                </p>
                                <a href="{{path('app_carnet_new_scolarite_primaire',{id: carnet.id})}}" class="btn btn-light text-uppercase">Choisir <i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                        {% else %}
                        Aucune information disponible
                        {% endfor %}
                    </div>
                    <div class="col-6">
                        {% for carnet in carnets_scolarite_college %}
                        <div class="card bg-primary">
                            <div class="card-body">
                                <h3 class="card-title text-body">N°{{carnet.numero}}</h3>
                                <p class="card-text">
                                    <h2 class="text-body text-uppercase text-light">Scolarité Collège</h2>
                                    <h2 class="text-body text-uppercase text-light">{{carnet.anneeAcademique.dateDebut}} - {{carnet.anneeAcademique.dateFin}}</h2>
                                </p>
                                <a href="{{path('app_carnet_new_scolarite_college',{id: carnet.id})}}" class="btn btn-light text-uppercase">Choisir <i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                        {% else %}
                        Aucune information disponible
                        {% endfor %}
                    </div>
                </div>
                <hr>
                <!-- Heading -->
                <h3 class="fw-bold me-3 text-uppercase mt-4" id="colors">2- Inscriptions & Réinscriptions</h3>

                <!-- Text -->
                <p class="text-gray-700 mb-5">
                Carnets d'inscription et de réinscription du primaire et du collège
                </p>

                <!-- Card -->
                <div class="row">
                    <div class="col-6">
                        {% for carnet in carnets_inscription_primaire %}
                        <div class="card bg-primary">
                            <div class="card-body">
                                <h3 class="card-title text-body">N°{{carnet.numero}}</h3>
                                <p class="card-text">
                                    <h2 class="text-body text-uppercase text-light">Inscription primaire</h2>
                                    <h2 class="text-body text-uppercase text-light">{{carnet.anneeAcademique.dateDebut}} - {{carnet.anneeAcademique.dateFin}}</h2>
                                </p>
                                <a href="{{path('app_carnet_new_inscription_primaire',{id:carnet.id})}}" class="btn btn-light text-uppercase">Choisir <i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="col-6">
                        {% for carnet in carnets_inscription_college %}
                        <div class="card bg-primary">
                            <div class="card-body">
                                <h3 class="card-title text-body">N°{{carnet.numero}}</h3>
                                <p class="card-text">
                                    <h2 class="text-body text-uppercase text-light">Inscription collège</h2>
                                    <h2 class="text-body text-uppercase text-light">{{carnet.anneeAcademique.dateDebut}} - {{carnet.anneeAcademique.dateFin}}</h2>
                                </p>
                                <a href="{{path('app_carnet_new_inscription_college',{id:carnet.id})}}" class="btn btn-light text-uppercase">Choisir <i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-6">
                        {% for carnet in carnets_reinscription_primaire %}
                        <div class="card bg-primary">
                            <div class="card-body">
                                <h3 class="card-title text-body">N°{{carnet.numero}}</h3>
                                <p class="card-text">
                                    <h2 class="text-body text-uppercase text-light">Réinscription primaire</h2>
                                    <h2 class="text-body text-uppercase text-light">{{carnet.anneeAcademique.dateDebut}} - {{carnet.anneeAcademique.dateFin}}</h2>
                                </p>
                                <a href="{{path('app_carnet_new_reinscription_primaire',{id:carnet.id})}}" class="btn btn-light text-uppercase">Choisir <i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <hr>
                <!-- Heading -->
                <h3 class="fw-bold me-3 text-uppercase mt-4" id="colors">3- Arriérés</h3>

                <!-- Text -->
                <p class="text-gray-700 mb-5">
                Carnets d'arriérés du primaire et du collège
                </p>

                <!-- Card -->
                <div class="row">
                    <div class="col-6">
                        <div class="card bg-primary">
                            <div class="card-body">
                                <h3 class="card-title text-body">N°1</h3>
                                <p class="card-text">
                                    <h2 class="text-body text-uppercase text-light">Arriérés primaire</h2>
                                    <h2 class="text-body text-uppercase text-light">2023 - 2024</h2>
                                </p>
                                <a href="#" class="btn btn-light text-uppercase">Choisir <i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card bg-primary">
                            <div class="card-body">
                                <h3 class="card-title text-body">N°1</h3>
                                <p class="card-text">
                                    <h2 class="text-body text-uppercase text-light">Arriérés collège</h2>
                                    <h2 class="text-body text-uppercase text-light">2023 - 2024</h2>
                                </p>
                                <a href="#" class="btn btn-light text-uppercase">Choisir <i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <!-- Heading -->
                <h3 class="fw-bold me-3 text-uppercase mt-4" id="colors">4- Tenues</h3>

                <!-- Text -->
                <p class="text-gray-700 mb-5">
                Carnets de tenues du primaire et du collège
                </p>

                <!-- Card -->
                <div class="row">
                    <div class="col-6">
                        <div class="card bg-primary">
                            <div class="card-body">
                                <h3 class="card-title text-body">N°1</h3>
                                <p class="card-text">
                                    <h2 class="text-body text-uppercase text-light">Tenues</h2>
                                    <h2 class="text-body text-uppercase text-light">2023 - 2024</h2>
                                </p>
                                <a href="#" class="btn btn-light text-uppercase">Choisir <i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            {% include 'boussole_partials/admin_right_bar.html.twig' %}
        </div> <!-- / .row -->
    </div>
</section>
{% endblock %}
