{% extends 'boussole_partials/admin_impression.html.twig' %}

{% block title %}Impression liste des inscrits en 5ème année | Administration C.S.P La Boussole{% endblock %}

{% block body %}
<script>
    window.onload = () => {
        window.print();
    }
</script> 
<section>
    <div class="container">
        <div class="row">

            <div class="">

                <!-- Card -->
                <div class="row">
                
                    <table class="table table-striped table-bordered table-collapsed">
                        <thead>
                            <tr>
                                <th colspan="5" class="text-uppercase text-center">Fiche d'inscription pour l'année académique 2023 - 2024</th>
                            </tr>

                            <tr>
                                <th colspan="5" class="text-uppercase text-center">Classe : 5ème année</th>
                            </tr>
                            <tr>
                                <th>
                                    N°
                                </th>
                                <th>
                                    Noms et Prénoms
                                </th>
                                <th>
                                    Montant
                                </th>
                                <th>
                                    Contact
                                </th>
                                <th>
                                    Ram A4
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for key, inscrit in inscrits_5emean %}
                        <tr>
                            <td>
                            {{key + 1}}
                            </td>
                            <td>
                            {{inscrit.nom}} {{inscrit.prenom}}
                            </td>
                            <td>
                            {{inscrit.montantChiffre}} FCFA
                            </td>
                            <td>
                            {{inscrit.telephone}}
                            </td>
                            <td>
                            {% if inscrit.avecRam == true %}
                                <i class="fa fa-check text-success"></i>
                            {% else %}
                                <i class="fa fa-times text-danger"></i>
                            {% endif %}
                            </td>
                        </tr>
                        {% else %}
                            <tr>
                                <td colspan='5' class="text-center">Aucun élève n'a été inscrit en classe de 5ème année</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                
                </div>

            </div>

        </div> <!-- / .row -->
    </div>
</section>
{% endblock %}
