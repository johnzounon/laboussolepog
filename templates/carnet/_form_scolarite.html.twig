{{ form_start(form,{'attr': {'id': 'form_scolarite'}}) }}

    {% for message in app.flashes('success') %}

        <div class="alert alert-dismissible alert-success m-2">

            {{ message }}

        </div>
        

    {% endfor %}

    {% if not form.vars.valid %}
                                    
    <div style="font-size:1em;" class="alert alert-dismissible alert-danger m-2">
        
        Veuillez corriger les erreurs présentes dans le formulaire!

    </div>

        {% for child in form.children %}

            {% if child.vars.errors is defined %}

                {% for error in child.vars.errors %}

                    <div class="alert alert-dismissible alert-danger m-2">

                        {{child.vars.label}} : {{error.message}}

                    </div>

                {% endfor %}


            {% endif %}


        {% endfor %}


    {% endif %}
    
    <div class="form-group mb-4">
        <label>Classe de l'élève <sup class="text-danger">*</sup></label>
        {{ form_row(form.classe)}}
    </div>
    <div class="form-group mb-4">
        <label>Élève <sup class="text-danger">*</sup></label>
        {{ form_row(form.eleve)}}
    </div>
    <div class="form-group mb-4">
        <label>Montant en chiffres <sup class="text-danger">*</sup></label>
        {{ form_row(form.montant_chiffre)}}
    </div>
    <div class="form-group mb-4">
        <label>Montant en lettres <sup class="text-danger">*</sup></label>
        {{ form_row(form.montant_lettre)}}
    </div>
    <div class="form-group mb-4">
        <label>Tarif par tranche (En cas de réduction)</label>
        {{ form_row(form.tarif_mensuel)}}
    </div>
    <div class="form-group mb-4">
        <label>Tranche <sup class="text-danger">*</sup></label>
        {{ form_row(form.tranche)}}
    </div>

    {% if app.user.roles[0] == 'ROLE_ADMIN' %}
    <div class="form-group mb-4">
        <label>Date <sup class="text-danger">*</sup></label>
        {{ form_row(form.date)}}
    </div>
    <div class="form-group mb-4">
        <label>Opérateur <sup class="text-danger">*</sup></label>
        {{ form_row(form.agent)}}
    </div>
    {% endif %}

    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}